@import "compass/css3";

html {

}

body {
  background-color: #333;
  padding: 0;
}

//GIVING EVERYTHING BORDER-BOX SIZING

body * {
  @include box-sizing(border-box);
}

ul {
  margin: 0;
  list-style: none;
}

li.playback-button {
  display: inline-block;
  &.playback-play {
  }

  .playback-skip {

  }
}
.navbar {

}
//NAVBAR

.navbar {
  * {
    border: none;
  }
  .navbar-inner {
    height: 100px;
    padding: 0;
    margin: 0;
    background-image: none;
    background-color: #000;
    @include single-box-shadow(rgba(0,0,0,.25), 0, 20px, 20px, 0, false);
    .navbar-progress {
      width: 25%;
      position: absolute;
      height: 100%;
      padding: 0;
      margin: 0;
      float: left;
      background-color: rgba(255,255,255, .25);
      @include single-transition(width, .25s, linear, false);
    }
    .container {
      height: 100%;
      width: 830px;
      .brand {
        display: inline-block;
        width: 233px;
        height: 80px;
        margin: 0;
        padding: 0;
        float: right;
        background: transparent url(<%= asset_path 'logo-large.png' %>) no-repeat;
      }
      ul {
        li {
          float: left;
        }
      }
    }
  }
}

//PLAYBACK CONTROLS

.playback-controls {
  li > a.playback-button {
    float: left;
    display: inline-block;
    position: relative;
    @include opacity(.8);
    @include single-transition(opacity, .1s, linear, false);
    &:hover {
      @include opacity(1);
    }
    &.playback-play {
      top: 50px;
      margin-top: -20px;
      margin-right: 30px;
      margin-left: 20px;
      width: 35px;
      height: 40px;
      background: transparent url(<%= asset_path 'big-play-button.png' %>) no-repeat;
      &.active {
        background: transparent url(<%= asset_path 'big-pause-button.png' %>) no-repeat;
      }
    }
    &.playback-skip {
      top: 50px;
      margin-top: -12px;
      width: 25px;
      height: 24px;
      background: transparent url(<%= asset_path 'big-skip-button.png' %>) no-repeat;
    }
  }
}

//PLAYBACK INFO

.playback-info {
  float:left;
  display: inline-block;
  margin-left: 20px;
  p {
    margin: 0;
    font-size: 16px;
    color: white;
  }
}

//EVENT MODULES

#main {
  margin-top: 100px;
  width: 830px;
}

.time-divider {
  color: white;
  text-align: left;
  padding-left: 2%;
  h4 {
    font-weight: normal;
  }
}

.span12.event {
  margin-left: 0;
  margin-bottom: 10px;
  padding: 2%;
  @include border-radius(2px);
  @include single-box-shadow(rgba(0,0,0,.25), 0, -3px, 0, 0, inset);
  background-color: white;
  .artists {
    padding: 0;
    text-align: left;
    .artist {
      display: inline-block;
      width: 100%;
      margin-bottom: 10px;
      padding: 5px;
      font-size: 120%;
      color: #333;
      @include border-radius(2px);
      @include single-transition(background-color, .05s, linear, false);
      &:hover {
        background-color: #E6E6E6;
        .small-playback-button {
          margin: 10px 10px 10px 5px;
        }
      }
      &:last-child {
        margin-bottom: 0;
      }
      .small-playback-button {
        height: 20px;
        width: 18px;
        margin: 10px 15px 10px 0;
        display: inline-block;
        float: left;
        background: transparent url(<%= asset_path 'small-play-button.png' %>) no-repeat;
        @include single-transition(margin, .1s, linear, false);
        &.active{
          background: transparent url(<%= asset_path 'small-pause-button-active.png' %>) no-repeat;
        }
      }
      h4 {
        margin: 0;
      }
      h4.artist-name {

      }
      h4.artist-song {
        font-size: 100%;
        font-weight: normal;
        color: #999;
      }
    }
  }
  .venue {
    padding: 0;
    text-align: right;
    h4.venue-name {
      margin-top: 0;
    }
  }
}