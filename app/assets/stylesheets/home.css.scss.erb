@import "compass/css3";

html {

}

body {
  background: #333 url(<%= asset_path 'crosshatch-bg.png' %>) repeat;
  padding: 0;
}

//GIVING EVERYTHING BORDER-BOX SIZING

body * {
  @include box-sizing(border-box);
}

ul {
  margin: 0;
  list-style: none;
}

li.playback-button {
  display: inline-block;
  &.playback-play {
  }

  .playback-skip {

  }
}
.navbar {

}

[class^="icon-"],
[class*=" icon-"] {
  vertical-align: text-top;
  background-image: url(<%= asset_path 'glyphicons-halflings.png' %>);
}

//NAVBAR

.navbar {
  * {
    border: none;
  }
  .navbar-inner {
    height: 100px;
    padding: 0;
    margin: 0;
    background-image: none;
    background-color: #000;
    @include single-box-shadow(rgba(0,0,0,.15), 0, 10px, 20px, 0, false);
    .navbar-progress {
      z-index: 9999;
      background: white url(<%= asset_path 'progress-teeth.png' %>) repeat-y center right;
      width: 25%;
      position: absolute;
      height: 100%;
      padding: 0;
      margin: 0;
      float: left;
      @include opacity(.2);
      @include single-transition(width, .25s, linear, false);
    }
    .container {
      position: relative;
      z-index: 999999;
      height: 100%;
      width: 830px;
      .brand {
        display: inline-block;
        width: 192px;
        height: 80px;
        margin: 10px 0;
        padding: 0;
        float: right;
        background: transparent url(<%= asset_path 'logo-large.png' %>) no-repeat;
      }
      ul {
        li {
          float: left;
        }
      }
    }
  }
}

//PLAYBACK CONTROLS

.playback-controls {
  li > a.playback-button {
    float: left;
    display: inline-block;
    position: relative;
    @include single-transition(opacity, .1s, linear, false);
    @include opacity(.8);
    &:hover {
      @include opacity(1);
    }
    &:active {
      margin-bottom: -2px;
    }
    &.playback-play {
      top: 50px;
      margin-top: -20px;
      margin-right: 30px;
      margin-left: 20px;
      width: 35px;
      height: 40px;
      background: transparent url(<%= asset_path 'big-play-button.png' %>) no-repeat;
      &.active {
        background: transparent url(<%= asset_path 'big-pause-button.png' %>) no-repeat;
      }
    }
    &.playback-skip {
      top: 50px;
      margin-top: -12px;
      width: 25px;
      height: 24px;
      background: transparent url(<%= asset_path 'big-skip-button.png' %>) no-repeat;
    }
  }
}

//PLAYBACK INFO

.playback-info {
  width: 520px;
  float:left;
  display: inline-block;
  margin: 30px 0 0 0;
  text-align: center;
  p {
    margin: 0;
    font-size: 16px;
    color: white;
  }
  .playback-name {
    font-weight: bold;
    .playback-artist {
    }
    .playback-song {
      color: #666;
    }
  }
  .playback-event {
    .playback-venue {

    }
    .playback-time {
      color: #666;
    }
  }
}

//EVENT MODULES

#main {
  margin-top: 100px;
  width: 830px;
}

.time-divider {
  color: white;
  text-align: left;
  padding-left: 2%;
  h4 {
    font-weight: normal;
  }
}

.span12.event {
  position: relative;
  margin: 10px 0 0 0;
  padding: 2%;
  border-left: 1px dashed #333;
  border-right: 1px dashed #333;
  @include border-radius(2px);
  @include single-box-shadow(rgba(0,0,0,.25), 0, -3px, 0, 0, inset);
  background: #E6E6E6 url(<%= asset_path 'paper-texture.png' %>) repeat;
  @include single-transition(background-color, 1s, linear, false);
  &.active {
    background-color: #FFF3C2;
  }
  .artists {
    padding: 0;
    text-align: left;
    border-right: 1px dashed rgba(0,0,0,.25);
    .artist {
      display: inline-block;
      width: 100%;
      margin-bottom: 10px;
      padding: 1%;
      font-size: 120%;
      color: #333;
      background-image: none;
      @include border-radius(2px);
      @include single-transition(background-image, .2s, linear, false);
      &:hover {
        @include background-image(linear-gradient(left, rgba(0,0,0,.2), rgba(255,255,255,.0)));
        .small-playback-button {
          margin: 10px 10px 10px 5px;
        }
      }
      &.active {
        .small-playback-button {
          background: transparent url(<%= asset_path 'small-pause-button-active.png' %>) no-repeat;
        }
        h4.artist-name {
          color: #007FFF;
        }
      }
      &:last-child {
        margin-bottom: 0;
      }
      .small-playback-button {
        cursor: pointer;
        height: 20px;
        width: 18px;
        margin: 10px 15px 10px 0;
        display: inline-block;
        float: left;
        background: transparent url(<%= asset_path 'small-play-button.png' %>) no-repeat;
        @include single-transition(margin, .1s, linear, false);
      }
      h4 {
        white-space: nowrap;
        text-overflow: ellipsis;
        margin: 0;
        text-transform: capitalize;
        @include single-transition(color, .5s, linear, false);
      }
      h4.artist-name {

      }
      h4.artist-song {
        font-size: 100%;
        font-weight: normal;
        color: #999;
      }
    }
  }
  .venue {
    padding: 0;
    text-align: right;
    text-transform: capitalize;
    h4 {
      margin-top: 0;
      white-space: nowrap;
      text-overflow: ellipsis;
    }
    p {
      margin-bottom: 3px;
    }
    .icon-shopping-cart {
      background-image: url(<%= asset_path 'icon-tickets.png' %>);
      background-position: 0 0;
    }
    [class^="icon-"], [class*=" icon-"] {
      margin-left: 5px;
    }
  }
}